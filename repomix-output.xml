        this.addBit(vt2, vt1, vb1, vb2, texture_, N2, true);
        this.addBit(vt3, vt2, vb2, vb3, texture_, N2, false);
        this.addBit(vt5, vt4, vb4, vb5, texture_, N4, true);
        this.addBit(vt6, vt5, vb5, vb6, texture_, N4, false);
