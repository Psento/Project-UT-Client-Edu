    private var honorIcon:Bitmap;

    private var isOver:Boolean;

    public function LegendListItem(legend:Legend) {
        super();
        this.legend = legend;
        this.makePlaceText();
        this.makeCharacterBitmap();
        this.makeNameText();
        this.makeInventory();
        this.makeTotalHonor();
        this.makeHonorIcon();
        this.addMouseListeners();
