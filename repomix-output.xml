                    this.effects.push(new Effect("", "Stars seek nearby enemies"));
                    this.effects.push(new Effect("", "Dazes nearby enemies"));
                    continue;
                case ActivationType.INCREMENT_STAT:
                    stat = int(activateXML.@stat);
                    amt = int(activateXML.@amount);
                    if (stat != 0 && stat != 1) {
