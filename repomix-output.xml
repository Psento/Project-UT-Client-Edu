        }
        this.addTop([v8, v9, va, vb, vc, vd, ve, vf], new <Number>[0.25, 0, 0.75, 0, 0.25, 0.25], texture);
    }

    override protected function buildCross():void {
        var vb0:Vector3D = new Vector3D(-this.bI_, -0.5, 0);
