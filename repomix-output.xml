            case "CustomParticles":
                return ParticleGenerator.attachParticleGenerator(effectProps, go);
            default:
                trace("ERROR: unable to create effect: " + effectProps.id);
                return null;
        }
    }

    override public function update(time:int, dt:int):Boolean {
