        var v2:Vector3D = new Vector3D(0.25 + Math.random() * 0.25, 0.25 + Math.random() * 0.25, 0);
        var v3:Vector3D = new Vector3D(-0.25 - Math.random() * 0.25, 0.25 + Math.random() * 0.25, 0);
